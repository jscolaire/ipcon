<!DOCTYPE html>
<html lang=es>
  <head>
    <link rel="shorcut icon" href="ipcon.ico">
    <title><%= content_for?(:title) ? APP_CONFIG[:brand] + " - " + yield(:title) : APP_CONFIG[:brand] %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div id="wrap">
      <div id="push"></div>
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container-fluid">
            <%= render :partial => 'layouts/navbar' %>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <div class="row-fluid">
          <div>
            <div class="row-fluid">
              <% flash.each do |name, msg| %>
                <%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert alert-#{name}" %>
              <% end %>
            </div>
            <div class="row-fluid">
              <div class="page-header"><%= content_tag :h1, yield(:title) if show_title? %></div>
              <div class="span1">&nbsp;</div>
              <div class="span10"><%= yield %></div>
              <div class="span1">&nbsp;</div>
            </div>
          </div>
        </div>
      </div>
      <div id="push"></div>
    </div>

    <div id="footer"><%= render :partial => "layouts/footer" %></div>

  </body>
</html>
