<table class="table table-condensed">
  <th width="125">IP</th>
  <th width="150">Activo asociado</th>
  <th width="200">Hostname</th>
  <th width="300">Descripci√≥n</th>
  <% if logged_in? %>
    <th>&nbsp;</th>
  <% end %>
  <%
    @ips.each {|ip|
      cl = "assigned0" if ip.assigned and cl == "even"
      cl = "assigned1" if ip.assigned and cl == "odd"
      cl = "gw" if ip.gw
      cl = "hsrp" if ip.hpsrp
      cl = "reserved" if ip.reserved
      cl = "temporal" if ip.temporal
    %>
    <tr class="<%= cl %>" id="<%= ip.ip %>">
  <td class="txtR">
    <%= link_to(h(ip),
        edit_ip_path(ip),
        :name => ip.ip) %></td>
  <td width="150" id="ip-act-<%= ip.id %>">
      <% if ip.activo != nil %>
        <%= link_to(h(ip.activo),ip.activo,:title => ip.activo.title ) %>
      <% else %>
        <%= link_to(h(ip.activo),ip.activo) %>
      <% end %>
  </td>
  <td width="200" id="ip-hn-<%= ip.id %>">
    <%= h(ip.hostname) %>
  </td>
  <td width="200" id="ip-lab-<%= ip.id %>">
    <%= ip.label %>
  </td>
  <% if logged_in? %>
    <td class="actions">
      <%= link_to(
            image_tag('/images/accept.png',
              :border => 0,
              :title => "Asignar/Liberar la IP"),
            :action => 'switch_status',
            :id => ip.id) %>
    </td>
  <% end %>
</tr>
<% } %>
</table>
